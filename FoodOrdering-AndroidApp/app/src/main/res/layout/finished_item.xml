<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/food_thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/food_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/food_thumbnail"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/food_thumbnail" />

    <TextView
        android:id="@+id/food_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/food_info1"
        android:layout_below="@+id/food_info1" />

</RelativeLayout>
